def bubble_sort(arr):
    n = len(arr)
    # Внешний цикл проходит по всей длине списка
    for i in range(n):
        swapped = False  # Флаг для оптимизации
        # Внутренний цикл проверяет оставшиеся несортированные элементы
        for j in range(0, n-i-1):  
            # Если текущий элемент больше последующего, меняем их местами
            if arr[j] > arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]
                swapped = True
        # Если за проход ничего не поменялось, значит список уже отсортирован
        if not swapped:
            break

# Пример использования
if __name__ == "__main__":
    arr = [64, 34, 25, 12, 22, 11, 90]
    print("Исходный массив:", arr)
    bubble_sort(arr)
    print("Отсортированный массив:", arr)
