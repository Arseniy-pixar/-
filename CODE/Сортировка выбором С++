#include <iostream>
using namespace std;

void selectionSort(int arr[], int n) {
    for (int i = 0; i < n - 1; ++i) { // Перебираем элементы от начала до предпоследнего
        int minIndex = i;              // Предположительно минимальный индекс

        // Ищем наименьший элемент справа от текущего индекса
        for (int j = i + 1; j < n; ++j) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;          // Обновляем индекс минимума
            }
        }
        
        // Меняем местами минимальный элемент с текущим
        swap(arr[i], arr[minIndex]);
    }
}

// Функция вывода массива
void printArray(const int arr[], int size) {
    for (int i = 0; i < size; ++i)
        cout << arr[i] << " ";
    cout << endl;
}

int main() {
    int arr[] = {64, 25, 12, 22, 11};
    int n = sizeof(arr)/sizeof(arr[0]);
    
    cout << "Исходный массив:\n";
    printArray(arr, n);
    
    selectionSort(arr, n);   // Сортируем массив
    
    cout << "\nОтсортированный массив:\n";
    printArray(arr, n);
    
    return 0;
}
