def shell_sort(arr):
    n = len(arr)
    gap = n // 2  # Начальное значение шага

    # Пока шаг больше нуля
    while gap > 0:
        # Выполняем сортировку вставками с заданным шагом
        for i in range(gap, n):
            temp = arr[i]
            j = i
            
            # Передвигаем элементы вперед, если они больше текущего элемента
            while j >= gap and arr[j-gap] > temp:
                arr[j] = arr[j-gap]
                j -= gap
                
            # Ставим текущий элемент на свою позицию
            arr[j] = temp
        
        # Уменьшаем шаг вдвое
        gap //= 2

# Пример использования
if __name__ == "__main__":
    arr = [64, 34, 25, 12, 22, 11, 90]
    print("Исходный массив:", arr)
    shell_sort(arr)
    print("Отсортированный массив:", arr)
